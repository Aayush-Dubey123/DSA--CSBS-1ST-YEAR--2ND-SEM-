// Online C compiler to run C program online
#include <stdio.h>
int main()
{
    int a[10][10],b[10][10],d[10][10];
    int r,c,i,j;
    printf("enter row to be present in 2D array =");
    scanf("%d",&r);
     printf("enter column to be present in 2D array =");
    scanf("%d",&c);
    for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
        printf("\nenter elements for 2D array A =");
        scanf("%d",&a[i][j]);
        }
    }
     for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
        {
        printf("\nenter elements for 2D array B =");
        scanf("%d",&b[i][j]);
        }
    }
      for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
      {
        d[i][j]=a[i][j]+b[i][j];
      }
    }
    printf("\naddition of 2D array A and B = \n");
     for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
      {
        printf("%d+%d=%d\n",a[i][j],b[i][j],d[i][j]);
      }
    }    
    printf("addition matrix formeed =");
     for(i=0;i<r;i++)
    {
        for(j=0;j<c;j++)
      {
        printf("%d ",d[i][j]);
      }
      printf("\n");
    }    
    return 0;
}
