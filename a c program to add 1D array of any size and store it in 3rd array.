// Online C compiler to run C program online
#include <stdio.h>
int main()
{
    int a[10],b[10],c[10];
    int size,i;
    printf("enter element size =");
    scanf("%d",&size);
    for(i=0;i<size;i++)
    {
        printf("\nenter elements for array A =");
        scanf("%d",&a[i]);
    }
    for(i=0;i<size;i++)
    {
        printf("\nenter elements for array B =");
        scanf("%d",&b[i]);
    }
     for(i=0;i<size;i++)
    {
        c[i]=a[i]+b[i];
    }
    printf("\naddition of 1D array A and B = \n");
     for(i=0;i<size;i++)
    {
        printf("%d+%d=%d\n",a[i],b[i],c[i]);
    }
    return 0;
}
